<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".harithakakatiya">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/haritakaka"
            android:paddingBottom="12dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Haritha Kakatiya Hotel"
            android:textStyle="bold"
            android:textSize="26sp"
            android:gravity="center"
            android:paddingBottom="12dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address: Main Road, Adalath Cir, Nakkala Gutta, Hanamkonda, Telangana 506001"
            android:paddingBottom="12dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/harita_inf"
            android:autoLink="web"
            android:paddingBottom="12dp"/>
        <Button
            android:id="@+id/haritha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Directions"
            android:paddingBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swipe left to see more photos."/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/hariq"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/harir"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/hariw"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/hariy"/>

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
</ScrollView>