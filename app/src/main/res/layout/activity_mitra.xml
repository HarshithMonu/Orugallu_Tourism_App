<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mitra">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:paddingBottom="12dp"
            android:src="@drawable/mitra"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mitra Residency"
            android:textSize="26dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:paddingBottom="12dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address: 2-5-83/84 3rd and 4th floor, Beside Nandana gardens, Nakkala Gutta, Hanamkonda, Telangana 506001"
            android:paddingBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mitra"
            android:autoLink="web"
            android:paddingBottom="12dp"/>

        <Button
            android:id="@+id/mitra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Directions"
            android:paddingBottom="12dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swipe left to see more photos."/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="380dp"
                    android:layout_height="300dp"
                    android:src="@drawable/mitraa"/>

                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="380dp"
                    android:layout_height="300dp"
                    android:src="@drawable/mitraq"/>

                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="380dp"
                    android:layout_height="300dp"
                    android:src="@drawable/mitraw"/>

                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="380dp"
                    android:layout_height="300dp"
                    android:src="@drawable/mitrae"/>

                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="380dp"
                    android:layout_height="300dp"
                    android:src="@drawable/mitrar"/>
                

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>